<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIActivity">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="match_parent"
        android:src="@drawable/pillo"
        android:scaleType="fitXY"
        android:layout_height="240dp"/>

    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_poster"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/ic_account_circle_black_24dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/ic_attach_money_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/ic_timer_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/lin_1"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#BE96F8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Noob vs pro Its a pillow fight bro"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="16dp"
        android:text="DESCRIPTION"/>

    <TextView
        android:id="@+id/txt_desctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_desc"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="bev evienive wivnwidiwc wocwinciwc wcnwivniw rivnrijvr vrivnrivnrv rvinrvinriv rvrinvirnvr vrvnrinvir vrivnr vr"/>


    <TextView
        android:id="@+id/txt_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_desctxt"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="RULES"/>

    <TextView
        android:id="@+id/txt_ruldesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rules"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"
        android:text="Follow the rules"/>

</RelativeLayout>